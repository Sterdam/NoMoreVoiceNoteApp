# Configuration Serveur
NODE_ENV=development
PORT=3000
DOMAIN=localhost

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123
MONGODB_URI=mongodb://admin:password123@mongodb:27017/whatsapp-transcriber?authSource=admin

# Redis
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# Sécurité
JWT_SECRET=votre-secret-jwt-tres-long-et-securise-ici
CRYPTO_KEY=votre-cle-de-chiffrement-securisee-ici
SESSION_SECRET=votre-secret-de-session-ici

# Limites et Configuration
MAX_FILE_SIZE=50mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
WHISPER_MODEL=base
CACHE_TTL=1800

# Chemins dans le conteneur Docker
DOCKER_MODELS_PATH=/app/models
DOCKER_TEMP_PATH=/app/temp

# Logs
LOG_LEVEL=debug
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d