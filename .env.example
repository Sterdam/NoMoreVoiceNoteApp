# Configuration Serveur
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-password
MONGODB_URI=mongodb://admin:your-secure-password@mongodb:27017/whatsapp-transcriber?authSource=admin

# Redis
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379

# Sécurité
JWT_SECRET=your-very-long-and-secure-jwt-secret-here
COOKIE_SECRET=your-cookie-secret-here
CRYPTO_KEY=your-encryption-key-here
CSRF_SECRET=your-csrf-secret-here

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# IDs des prix Stripe (créez-les dans votre dashboard Stripe)
STRIPE_BASIC_PRICE_ID=price_your-basic-price-id
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Limites et Configuration
MAX_FILE_SIZE=25mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto

# Queue Configuration
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=3

# Session Configuration
SESSION_NAME=whatsapp-transcriber
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email (optionnel, pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=WhatsApp Transcriber <noreply@your-domain.com>