# Configuration Serveur
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=https://voxkill.com

# MongoDB
MONGO_ROOT_USER=voxkill_admin
MONGO_ROOT_PASSWORD=your-very-secure-mongodb-password
MONGODB_URI=mongodb://voxkill_admin:your-very-secure-mongodb-password@mongodb:27017/voxkill?authSource=admin

# Redis
REDIS_PASSWORD=your-very-secure-redis-password
REDIS_URL=redis://:your-very-secure-redis-password@redis:6379

# Sécurité
JWT_SECRET=your-very-long-and-secure-jwt-secret-at-least-64-chars
COOKIE_SECRET=your-secure-cookie-secret-at-least-32-chars
CRYPTO_KEY=your-encryption-key-at-least-64-chars-for-aes-256
CSRF_SECRET=your-csrf-secret-at-least-32-chars

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_BASIC_PRICE_ID=price_your-basic-price-id
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Limites et Configuration
MAX_FILE_SIZE=25mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# WhatsApp Business API (si utilisé)
WHATSAPP_PHONE_NUMBER=+33XXXXXXXXX

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto

# Queue Configuration
QUEUE_CONCURRENCY=4
QUEUE_MAX_RETRIES=3

# Session Configuration
SESSION_NAME=voxkill
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGINS=https://voxkill.com,https://www.voxkill.com

# Email (pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@voxkill.com
SMTP_PASS=your-app-password
EMAIL_FROM=VoxKill <noreply@voxkill.com>