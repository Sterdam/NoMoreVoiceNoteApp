# VoxKill Production Configuration
NODE_ENV=production

# Application
PORT=3000
HOST=0.0.0.0
BASE_URL=https://voxkill.com
FRONTEND_URL=https://voxkill.com

# Database
MONGODB_URI=mongodb://voxkill_user:secure_password_here@mongodb:27017/voxkill?authSource=admin

# Redis
REDIS_URL=redis://:redis_password_here@redis:6379

# Security
JWT_SECRET=generate_64_char_secret_here
COOKIE_SECRET=generate_32_char_secret_here
CRYPTO_KEY=generate_32_char_secret_here
CSRF_SECRET=generate_32_char_secret_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# CORS
CORS_ORIGIN=https://voxkill.com

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_PRIORITY_CONCURRENCY=10

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-sessions
WHATSAPP_RECONNECT_INTERVAL=30000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=10

# Session Configuration
SESSION_TTL=86400
SESSION_CLEANUP_INTERVAL=3600

# Monitoring
LOG_LEVEL=info
LOG_MAX_FILES=14

# Performance
MAX_REQUEST_SIZE=50mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100