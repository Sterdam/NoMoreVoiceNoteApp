# Environnement
NODE_ENV=production
DOMAIN=${HOSTNAME}.jcloud.ik-server.com

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${RANDOM_PASSWORD_1}
MONGODB_URI=mongodb://admin:${RANDOM_PASSWORD_1}@mongodb:27017/whatsapp-transcriber?authSource=admin

# Redis
REDIS_PASSWORD=${RANDOM_PASSWORD_2}
REDIS_URL=redis://:${RANDOM_PASSWORD_2}@redis:6379

# Sécurité
JWT_SECRET=${RANDOM_PASSWORD_3}
CRYPTO_KEY=${RANDOM_PASSWORD_4}
SESSION_SECRET=${RANDOM_PASSWORD_5}

# Configuration
DATA_DIR=/data/whatsapp
MAX_FILE_SIZE=50mb
WHISPER_MODEL=base
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d